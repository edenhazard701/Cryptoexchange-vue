	/* layout */
	.wrap{min-width:320px; height:100%; position:relative;}
	.inner{width:1200px; height:100%; margin:0 auto; padding-top:80px;}
	.anc{position:fixed; height:100px; right:40px; top:0; bottom:0; margin:auto; z-index:99; text-align:right;}
	.anc > li a{font-size:13px; color:#555; display:block; padding:6px 0;}
	.anc > li a > .circle{display:inline-block; width:10px; height:10px; border-radius:50%; background:#555; margin-left:10px;}
	.anc > li a:hover > .circle,
	.anc > li.active a > .circle{background:#fff;}
	.anc > li a:hover,
	.anc > li.active a{color:#fff;}
	.anc.no-visual > li a{color:#bebebe;}
	.anc.no-visual > li a > .circle{background:#bebebe;}
	.anc.no-visual > li.active a > .circle{background:#004ea2;}
	.anc.no-visual > li a:hover,
	.anc.no-visual > li.active a{color:#004ea2;}
	.anc.no-visual > li a:hover > .circle,
	.anc.no-visual > li.active a > .circle{background:#004ea2;}

